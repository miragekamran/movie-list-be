{
    "name": "backend",
    "version": "1.0.0",
    "scripts": {
        "local": "cross-env NODE_ENV=development nodemon dev_index.js",
        "test": "cross-env NODE_ENV=testing jest",
        "test:watch": "cross-env NODE_ENV=testing jest --watch",
        "start": "cross-env NODE_ENV=production node index.js",
        "server": "nodemon index.js",
        "ketchup": "git fetch && git reset --rard origin/main",
        "up": "knex migrate:up",
        "latest": "knex migrate:latest",
        "down": "knex migrate:down",
        "rollback": "knex migrate:rollback",
        "seed": "knex seed:run",
        "resetdb": "npm run rollback && npm run latest && npm run seed"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "connect-session-knex": "^3.0.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "helmet": "^6.0.1",
        "jsonwebtoken": "^9.0.0",
        "knex": "^2.4.2",
        "knex-cleaner": "^1.3.1",
        "multer": "^1.4.5-lts.1",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "dotenv": "^16.0.3",
        "eslint": "^8.36.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.21",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node"
    }
}
